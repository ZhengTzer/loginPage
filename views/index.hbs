<a href="/">
  <h2 class='d-flex justify-content-center p-5'>Account login</h2>
</a>

<div class="container justify-content-center col-4 border-secondary">

  <form action="/" method="POST">
    <div class="form-group">
      <input type="email" class="form-control" id="userInputEmail" aria-describedby="emailHelp" placeholder="Email"
        name='email' value="{{userInput.email}}" required>
    </div>

    <div class="form-group">
      <input type="password" class="form-control" id="userInputPassword" placeholder="Password" name='password'>
    </div>

    <div class="form-group">
      {{#if result}}
      <span class="text-danger"><i class="fas fa-exclamation-circle"></i> {{result}}</span>
      {{/if}}
    </div>

    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">Remember me</label>
    </div>

    <div class='text-center p-3'>
      <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
    </div>
    <div class='text-center pt-3'>
      <a href="#">forgot password</a>
    </div>
  </form>
</div>